<Window x:Class="MunicipalAppProgPoe.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Search Events" Height="300" Width="400" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <StackPanel>
            <Label Content="Search Events" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>

            <!-- Search by Name -->
            <StackPanel Orientation="Horizontal" Margin="0,20,0,10">
                <Label Content="Event Name:" Width="100"/>
                <TextBox x:Name="txtEventName" Width="200"/>
            </StackPanel>

            <!-- Search by Category -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                <Label Content="Category:" Width="100"/>
                <TextBox x:Name="txtCategory" Width="200"/>
            </StackPanel>

            <!-- Search by Date -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                <Label Content="Event Date:" Width="100"/>
                <DatePicker x:Name="dpEventDate" Width="200"/>
            </StackPanel>

            <!-- Search Button -->
            <Button Content="Search" Width="100" Height="30" HorizontalAlignment="Center" Click="BtnSearch_Click"/>
        </StackPanel>
    </Grid>
</Window>
